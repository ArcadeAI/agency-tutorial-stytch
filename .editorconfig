# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# TypeScript and JavaScript files
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 4

# Package.json (sometimes people prefer 2 spaces, but using 4 as requested)
[package.json]
indent_style = space
indent_size = 4
